{
  "name": "projectstructure",
  "displayName": "Project Structure Visualizer",
  "version": "1.0.0",
  "description": "Visualizes the file structure of the current project in a VS Code workspace.",
  "publisher": "lohChanHin",
  "main": "src/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lohchanhin/project_structure.git"
  },
  "scripts": {
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.showProjectStructure",
        "title": "Show Project Structure"
      }
    ],
    "configuration": {
      "title": "Project Structure",
      "properties": {
        "projectStructure.excludedFolders": {
          "type": "array",
          "default": [
            "node_modules",
            ".git"
          ],
          "description": "List of directories to exclude from the project structure view."
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.5",
    "vsce": "^2.5.3"
  },
  "license": "ISC",
  "keywords": [
    "VS Code",
    "project",
    "structure",
    "visualizer"
  ],
  "dependencies": {
    "acorn": "^8.13.0",
    "acorn-walk": "^8.3.4",
    "nvm": "^0.0.4"
  }
}
